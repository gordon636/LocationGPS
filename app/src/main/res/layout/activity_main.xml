<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewCurrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#9ed1d0c6"
        android:padding="5dp"
        android:text="Your Current Location:"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCurrent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#9ed1d0c6"
        android:padding="5dp"
        android:text="Start Location:"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewStart"
        android:background="@color/bar"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Location History"
        android:textSize="16sp"
        android:textStyle="bold" />
        android:text="@string/location_history" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#c4b80f0f"
        android:padding="10dp"
        android:text="Update"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />
        android:text="@string/update" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="69dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView"
        android:background="@android:color/holo_green_dark"
        android:padding="5dp"
        android:text="Reset"
        android:textColor="@android:color/background_light"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_margin="5dp"
        android:background="@color/blackTrans"
        android:stackFromBottom="false">


    </ListView>

</RelativeLayout>